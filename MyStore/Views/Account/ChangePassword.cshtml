
@model MyStore.Models.ViewModels.ChangePasswordVM

@{
    ViewBag.Title = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thay đổi mật khẩu</h2>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <strong>@Html.LabelFor(m => m.CurrentPassword, "Mật khẩu hiện tại")</strong>
        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CurrentPassword)
    </div>

    <div class="form-group">
        <strong>@Html.LabelFor(m => m.NewPassword, "Mật khẩu mới")</strong>
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NewPassword)
    </div>

    <div class="form-group">
        <strong>@Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu mới")</strong>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>

    <button type="submit" class="btn btn-primary">Thay đổi mật khẩu</button>
}
